#include <stdlib.h>
#include <stdio.h>
#include <ctype.h>
#include <string.h>
#include <sys/types.h>
#include <sys/stat.h>
#include <std.h>
#include <sum.h>

/*
 * usr/src/lib/libcmd
 */

/* deflt.c */
int defopen(char *fn);
char *defread(char *cp);
int defcntl(int cmd, int newflags);

/* getterm.c */
int getterm(char *tname, char *buffer, char *filename, char *deftype);

/* magic.c */
int mkmtab(char *magfile, int cflg);
int ckmtab(char *buf, int bufsize, int silent);
void prtmtab(void);
intmax_t getmaxoffset(void);

/* sum.c */
void sumpro(struct suminfo *sip);
void sumupd(struct suminfo *sip, char *buf, int cnt);
void sumepi(struct suminfo *sip);
void sumout(FILE *fp, struct suminfo *sip);
